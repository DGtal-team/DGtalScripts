#!/usr/bin/make -f
# Sample debian/rules file - for DGtal.

package = libdgtal
docdir = debian/libs/usr/share/doc/$(package)

CC = gcc
CFLAGS = -g -Wall
INSTALL_PROGRAM = install

ifeq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O2
endif
ifeq (,$(findstring nostrip,$(DEB_BUILD_OPTIONS)))
	INSTALL_PROGRAM += -s
endif

build:
	$(checkdir)
	cmake -DCMAKE_INSTALL_PREFIX=/usr \
    -DBUILD_EXAMPLES:BOOL=OFF \
    -DBUILD_SHARED_LIBS:BOOL=ON \
    -DBUILD_TESTING:BOOL=OFF \
    -DCMAKE_BUILD_TYPE=Release \
    -DWITH_GMP:string=true \
    -DWITH_EIGEN:string=true \
    -DWITH_QGLVIEWER:string=true .
	$(MAKE) CC="$(CC)" CFLAGS="$(CFLAGS)"
	touch build

clean:
	$(checkdir)
	rm -f build
	cmake -DCMAKE_INSTALL_PREFIX=/usr .
	[ ! -f Makefile ] || $(MAKE) clean
	rm -r *.cmake Makefile CMakeFiles CMakeCache.txt
	rm -rf *~ debian/tmp debian/*~ debian/files* debian/substvars

binary-indep:   checkroot build
	$(checkdir)
# There are no architecture-independent files to be uploaded
# generated by this package.  If there were any they would be
# made here.

binary-arch:    checkroot build
	$(checkdir)
	rm -rf debian/tmp
	rm -rf debian/libs
	mkdir debian/tmp
	mkdir debian/libs
	mkdir debian/libs/usr
    
	install -d debian/tmp/DEBIAN $(docdir)
	install -d debian/libs/DEBIAN $(docdir) 
	$(MAKE) DESTDIR=$(CURDIR)/debian/tmp $(INSTALL_PROGRAM)
	cp -a debian/copyright $(docdir)
	cp -a debian/changelog $(docdir)/changelog.Debian
	cp -a ChangeLog.md $(docdir)/changelog.md
	cd $(docdir) && gzip -9 changelog.md changelog.Debian
    
	rm -rf debian/tmp/usr/doc # is empty
	rm -rf debian/tmp/usr/include/CMakeFiles # is empty
	mv debian/tmp/usr/lib debian/libs/usr
    
	dpkg-gencontrol -pdgtal-dev -Pdebian/tmp
	chown -R root:root debian/tmp
	chmod -R u+w,go=rX debian/tmp
	dpkg --build debian/tmp ..
	
	dpkg-gencontrol -pdgtal -Pdebian/libs
	chown -R root:root debian/libs
	chmod -R u+w,go=rX debian/libs
	dpkg --build debian/libs ..
	
define checkdir
	test -f CMakeLists.txt -a -f debian/rules
endef

binary: binary-indep binary-arch

checkroot:
	$(checkdir)
	test $$(id -u) = 0

.PHONY: binary binary-arch binary-indep clean checkroot

